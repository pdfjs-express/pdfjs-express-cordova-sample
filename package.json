{
    "name": "pdfjs-express-cordova-sample",
    "displayName": "WebViewerCordovaSample",
    "version": "1.0.0",
    "description": "A sample PDF.js Express app in Cordova.",
    "main": "index.js",
    "scripts": {
        "start": "cordova build browser && cordova run browser",
        "postinstall": "node tools/copy-webviewer-files.js && cordova platform add browser"
    },
    "author": "PDF.js Express",
    "devDependencies": {
        "@pdftron/webviewer-downloader": "^1.0.7",
        "btoa": "^1.2.1",
        "download": "^7.1.0",
        "fs-extra": "^7.0.1"
    },
    "dependencies": {
        "@pdftron/pdfjs-express": "^6.2.1",
        "cordova-browser": "^5.0.4",
        "cordova-plugin-whitelist": "^1.3.3"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "browser"
        ]
    }
}